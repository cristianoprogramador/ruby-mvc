<%= link_to "Criar Produto", new_product_path %>

<% @products.each do |product| %>

  <p> <%=product.name%> </p>
  <p> <%=product.price%> </p>
  <p> <%=product.quantity%> </p>

  <%= link_to "Ver Produto", product %>
  <%= link_to "Editar Produto", edit_product_path(product) %>

  <%= button_to "Excluir", product, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } } %>
<%end%>
